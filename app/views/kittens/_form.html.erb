
<%= form_for(@kitten, url: kittens_path(@kitten)) do |f| %>
    <div class="row">
      <div class="form-group col-md-3"> 
      Kitten's name: <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group col-md-3"> 
        Age: <%= f.number_field :age,in: 1..30, step: 0.5, class: "form-control" %>
      </div>
      <div class="form-group col-md-3"> 
        Cuteness: <%= f.number_field :cuteness, in: 0..10, step: 0.5, class: "form-control" %>
      </div>
      <div class="form-group col-md-3"> 
        Softness: <%= f.number_field :softness, in: 0..10, step: 0.5, class: "form-control" %>
      </div>
    </div>


    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary post_button"  %>
    </div>
<%end %>